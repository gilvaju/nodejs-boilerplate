{
  "compilerOptions": {
    "target": "es2020",                                
    "module": "commonjs",                           
    "lib": ["es6"],
    "baseUrl": ".",          
    "paths": {
      "@domain/*": ["./src/core/domain/*"]
    },                         
    "allowJs": true,                             
    "outDir": "./dist",                              
    "rootDir": "./src",                          
    "removeComments": true,                      
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/@types"
    // ],                             
    "esModuleInterop": true,                        
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true, 
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ]
}
